---
import BaseLayout from "../../layouts/Base.astro";
const allPosts = await Astro.glob("./*.md");
---

<BaseLayout>
    <section>
        <h1>Tout nos articles</h1>
        <ul class="liste">
            {
                allPosts.map((post) => (
                    <li class="card">
                        <h2>{post.frontmatter.title}</h2>
                        <p>{post.frontmatter.description}</p>
                        <a class="button" href={`${post.url}/`}>Voir l'article</a>

                    </li>
                ))
            }
        </ul>
    </section>
</BaseLayout>


<style>
    ul{
        list-style-type: none;
    }

    a{
        text-decoration: none;
        color: #ABE4A1;
    }


    a:hover{
        color: #e3a1d0;
    }

    .liste{
        display: grid;
        grid-template-columns: 50% 50%;
        row-gap: 20px;
        margin-top: 8%;
        margin-left: 20%;
        margin-right: 20%;
        justify-items: center;
    }

    .card{
        background-color: #2b2b2b;
        padding: 20px;
        border-radius: 20px;
        max-width: 500px;
        margin-top: 25px;
        
    }

    h2{
        margin-top: 0;
    }
    
    p{
        margin-bottom: 15px;
    }

</style>

